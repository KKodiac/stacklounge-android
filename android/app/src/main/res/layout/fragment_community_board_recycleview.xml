<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/square_border_btcolor">


    <TextView
        android:id="@+id/tvboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="1dp"
        android:text="글 제목"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvboardContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvboardContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="글 내용"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/starNum"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/tvboardTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvboardTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글 작성 시간"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/tvboardContent"
        app:layout_constraintTop_toBottomOf="@+id/tvboardContent" />

    <TextView
        android:id="@+id/tvuserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|  작성자"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@+id/tvboardTime"
        app:layout_constraintTop_toBottomOf="@+id/tvboardContent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="287dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/starNum"
        app:layout_constraintEnd_toStartOf="@+id/starNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starNum"
        app:srcCompat="@drawable/ic_baseline_stars_24" />

    <TextView
        android:id="@+id/starNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/tvboardContent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/starNum"
        app:layout_constraintEnd_toStartOf="@+id/commentNum"
        app:layout_constraintStart_toEndOf="@+id/starNum"
        app:layout_constraintTop_toTopOf="@+id/commentNum"
        app:srcCompat="@drawable/speech_buble" />

    <TextView
        android:id="@+id/commentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="7dp"
        android:text="12"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6" />
</androidx.constraintlayout.widget.ConstraintLayout>