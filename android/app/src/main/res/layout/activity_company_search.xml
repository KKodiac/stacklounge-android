<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stcolor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    app:cardBackgroundColor="#1B2432"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    tools:context=".company.CompanySearch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/companyTextImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/text"
            android:text="ê°€"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Coupang"
        android:layout_margin="10dp"
        android:textColor="@color/text"
        android:id="@+id/companyNameTextView"/>

    <TextView
        android:id="@+id/techStackTextView"
        android:layout_width="match_parent"
        android:text="TECHSTACK"
        android:layout_margin="10dp"
        android:textColor="@color/text"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
</LinearLayout>